<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <name>Kerala - Rainfall Severity (Aug 2018)</name>
    <description>
      <![CDATA[
       Rainfall Severity Analysis<br>
      <span style="color:#FFFF00;">█</span> Excess Rainfall<br>
      <span style="color:#FFAA00;">█</span> Very Heavy Rainfall<br>
      <span style="color:#FF0000;">█</span> Extreme Rainfall
      ]]>
    </description>

    <!-- Styles: Opacity ~60% (99 in hex) -->
    <Style id="poly_extreme">
      <LineStyle><color>ff0000ff</color><width>1.5</width></LineStyle>
      <PolyStyle><color>990000ff</color></PolyStyle> <!-- Red -->
    </Style>
    <Style id="poly_very_heavy">
      <LineStyle><color>ff0088ff</color><width>1.5</width></LineStyle>
      <PolyStyle><color>990080ff</color></PolyStyle> <!-- Orange -->
    </Style>
    <Style id="poly_excess">
      <LineStyle><color>ff00ffff</color><width>1.5</width></LineStyle>
      <PolyStyle><color>9900ffff</color></PolyStyle> <!-- Yellow -->
    </Style>

    <!-- Extreme Rainfall Districts -->
    <Folder>
      <name>Extreme Rainfall (Red)</name>
      <!-- Idukki - Hexagon Approx -->
      <Placemark>
        <name>Idukki</name>
        <description>Recorded highest rainfall deviation. Catchment areas saturated.</description>
        <styleUrl>#poly_extreme</styleUrl>
        <Polygon>
          <outerBoundaryIs>
            <LinearRing>
              <coordinates>
                76.8,10.1,0 77.3,10.0,0 77.2,9.6,0 76.9,9.4,0 76.6,9.7,0 76.8,10.1,0
              </coordinates>
            </LinearRing>
          </outerBoundaryIs>
        </Polygon>
      </Placemark>

       <!-- Wayanad -->
      <Placemark>
        <name>Wayanad</name>
        <description>Extreme rainfall caused multiple landslides in the ghat sections.</description>
        <styleUrl>#poly_extreme</styleUrl>
        <Polygon>
          <outerBoundaryIs>
            <LinearRing>
              <coordinates>
                75.8,11.9,0 76.2,11.9,0 76.4,11.6,0 76.1,11.5,0 75.9,11.6,0 75.8,11.9,0
              </coordinates>
            </LinearRing>
          </outerBoundaryIs>
        </Polygon>
      </Placemark>
      
      <!-- Palakkad -->
      <Placemark>
        <name>Palakkad</name>
        <styleUrl>#poly_extreme</styleUrl>
        <Polygon>
          <outerBoundaryIs>
            <LinearRing>
              <coordinates>
                 76.3,11.0,0 76.8,11.1,0 76.9,10.6,0 76.5,10.5,0 76.3,10.7,0 76.3,11.0,0
              </coordinates>
            </LinearRing>
          </outerBoundaryIs>
        </Polygon>
      </Placemark>

      <!-- Ernakulam -->
      <Placemark>
        <name>Ernakulam</name>
        <styleUrl>#poly_extreme</styleUrl>
        <Polygon>
          <outerBoundaryIs>
            <LinearRing>
              <coordinates>
                76.2,10.3,0 76.7,10.2,0 76.6,9.9,0 76.2,9.8,0 76.2,10.3,0
              </coordinates>
            </LinearRing>
          </outerBoundaryIs>
        </Polygon>
      </Placemark>
    </Folder>

    <!-- Very Heavy Rainfall -->
    <Folder>
      <name>Very Heavy Rainfall (Orange)</name>
      <!-- Pathanamthitta -->
      <Placemark>
        <name>Pathanamthitta</name>
        <styleUrl>#poly_very_heavy</styleUrl>
        <Polygon>
          <outerBoundaryIs>
            <LinearRing>
              <coordinates>
                76.6,9.5,0 77.0,9.4,0 76.9,9.1,0 76.5,9.2,0 76.6,9.5,0
              </coordinates>
            </LinearRing>
          </outerBoundaryIs>
        </Polygon>
      </Placemark>
      <!-- Alappuzha -->
       <Placemark>
        <name>Alappuzha</name>
        <styleUrl>#poly_very_heavy</styleUrl>
        <Polygon>
          <outerBoundaryIs>
            <LinearRing>
              <coordinates>
                76.2,9.8,0 76.5,9.6,0 76.5,9.2,0 76.3,9.2,0 76.2,9.8,0
              </coordinates>
            </LinearRing>
          </outerBoundaryIs>
        </Polygon>
      </Placemark>
       <!-- Thrissur -->
       <Placemark>
        <name>Thrissur</name>
        <styleUrl>#poly_very_heavy</styleUrl>
        <Polygon>
          <outerBoundaryIs>
            <LinearRing>
              <coordinates>
                76.0,10.7,0 76.4,10.6,0 76.5,10.3,0 76.1,10.2,0 76.0,10.7,0
              </coordinates>
            </LinearRing>
          </outerBoundaryIs>
        </Polygon>
      </Placemark>
    </Folder>

    <!-- Excess Rainfall -->
    <Folder>
      <name>Excess Rainfall (Yellow)</name>
      <!-- Malappuram -->
      <Placemark>
        <name>Malappuram</name>
        <styleUrl>#poly_excess</styleUrl>
        <Polygon>
          <outerBoundaryIs>
            <LinearRing>
              <coordinates>
                75.9,11.3,0 76.3,11.3,0 76.4,11.0,0 76.0,10.9,0 75.9,11.3,0
              </coordinates>
            </LinearRing>
          </outerBoundaryIs>
        </Polygon>
      </Placemark>
       <!-- Kozhikode -->
      <Placemark>
        <name>Kozhikode</name>
        <styleUrl>#poly_excess</styleUrl>
        <Polygon>
          <outerBoundaryIs>
            <LinearRing>
              <coordinates>
                75.6,11.7,0 76.0,11.6,0 76.1,11.3,0 75.7,11.1,0 75.6,11.7,0
              </coordinates>
            </LinearRing>
          </outerBoundaryIs>
        </Polygon>
      </Placemark>
    </Folder>

  </Document>
</kml>
