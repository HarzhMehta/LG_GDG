        </Icon>
        <color>ff00ffff</color> <!-- Yellow tint -->
      </IconStyle>
      <LabelStyle><scale>0.0</scale></LabelStyle> <!-- Hide label by default to reduce clutter -->
       <BalloonStyle>
        <text><![CDATA[
          <b>$[name]</b><br/><br/>
          $[description]
        ]]></text>
      </BalloonStyle>
    </Style>

