    <Style id="district_label_style">
      <LabelStyle>
        <scale>1.1</scale>
        <color>ff00ffff</color> <!-- Yellow labels -->
      </LabelStyle>
      <IconStyle>
        <scale>0</scale> <!-- Hide icon, show only label -->
